        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        tools:text="2 Kg"
        android:layout_weight="0.4"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Rp 1000"
        android:textAlignment="center"
        android:layout_weight="0.7"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Rp 2.000"
        android:textAlignment="center"
        android:layout_weight="1"/>

</LinearLayout>